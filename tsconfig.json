{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    // Default
    "target": "ES5", 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true, 
    "skipLibCheck": true,
    "rootDir": "src",
    // Added
    "jsx": "react", 
    "module": "ESNext",  
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,                                /* Skip type checking all .d.ts files. */
  }
}
